#include "main.h"

/**
 * strcat - concatenates the string pointed to by @src, including the terminat
 * null bytes to the end of the string pointed to by @dest.
 * @dest: A poiter to the string to be concatenated upon
 * @src: The pointer to the destination string @dest
 */
char *strecat(char *dest, const char *src)
{
	int index = 0, dest_len = 0;

	while (dest[index++])
		dest_len++;

	for (index = 0; src[index]; index++)
		dest[dest_len++] = src[index];

	return (dest);
}
